include mixins
block vars
doctype html
html(lang="ru")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(name='description', content='#{description}')
    title Автосервис в красном селе - #{title}
    link(rel="stylesheet" href="css/main.min.css")
  body
    .overflow-limiter
      include header
      +header
      block content
      include footer
      include ../blocks/modal/modal
      +modal
      script(src="https://api-maps.yandex.ru/2.1/?apikey=81fae96d-41d8-4ca8-a44a-8df50880c387&lang=ru_RU")
      script(src='js/main.js')
